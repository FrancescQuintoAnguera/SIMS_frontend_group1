@startuml

actor "Super user"

package "Vehicles" {
  (Averia)
  (Estaciones de carga)
}

package "Contactar" {
  (Contactar amb un administrador de flota)
  (Contactar amb un treballador)
}

package "Mapa" {
  (Veure ubicació estacions de càrrega)
  (Veure ubicació cotxes estàtics)
  (Veure ubicació cotxes en moviment)
  (Veure ubicació treballadors)
}

"Super user" --> (Averia)
"Super user" --> (Estaciones de carga)
"Super user" --> (Contactar amb un administrador de flota)
"Super user" --> (Contactar amb un treballador)
"Super user" --> (Veure ubicació estacions de càrrega)
"Super user" --> (Veure ubicació cotxes estàtics)
"Super user" --> (Veure ubicació cotxes en moviment)
"Super user" --> (Veure ubicació treballadors)

@enduml