@startuml
left to right direction

actor Client

package "Vehicles" {
  usecase "Veure la seva informació" as UC1
  usecase "Alquiler" as UC2
}

package "ChatBot" {
  usecase "Preguntes freqüents" as UC3
}

package "Mapa" {
  usecase "Veure ubicació control de carga" as UC4
}

Client --> UC1
Client --> UC2
Client --> UC3
Client --> UC4
@enduml


@startuml

actor Treballador

package "Vehicles" {
  (Veure la seva informació)
  (Alquilar)
}

package "Mapa" {
  (Veure ubicació control de càrrega)
}

package "Contactar" {
  (Veure ubicació cotxes estàtics)
  (Contactar amb Administrador de vehicles)
}

Treballador --> (Veure la seva informació)
Treballador --> (Alquilar)
Treballador --> (Veure ubicació control de càrrega)
Treballador --> (Veure ubicació cotxes estàtics)
Treballador --> (Contactar amb Administrador de vehicles)

@enduml



